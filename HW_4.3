import sys
from pathlib import Path
from colorama import init, Fore, Style

# –Ü–Ω—ñ—Ü—ñ–∞–ª—ñ–∑—É—î–º–æ –±—ñ–±–ª—ñ–æ—Ç–µ–∫—É colorama –¥–ª—è –∫–æ—Ä–µ–∫—Ç–Ω–æ—ó —Ä–æ–±–æ—Ç–∏ –Ω–∞ Windows
init(autoreset=True)

def print_directory_structure(path: Path, indent: str = ""):
    """
    –†–µ–∫—É—Ä—Å–∏–≤–Ω–æ –≤–∏–≤–æ–¥–∏—Ç—å —Å—Ç—Ä—É–∫—Ç—É—Ä—É –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó –∑ –∫–æ–ª—å–æ—Ä–æ–≤–∏–º –≤–∏–¥—ñ–ª–µ–Ω–Ω—è–º –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ–π —Ç–∞ —Ñ–∞–π–ª—ñ–≤.
    """
    # –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞, —á–∏ –≤–∫–∞–∑–∞–Ω–∏–π —à–ª—è—Ö —î –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—î—é
    if not path.is_dir():
        print(f"{Fore.RED}{path} –Ω–µ —î –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—î—é.")
        return
    
    # –°–æ—Ä—Ç—É—î–º–æ –≤–º—ñ—Å—Ç –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó –¥–ª—è –∫–æ—Ä–µ–∫—Ç–Ω–æ–≥–æ –≤–∏–≤–æ–¥—É
    items = sorted(path.iterdir(), key=lambda x: x.is_file())
    
    # –û–±—Ä–æ–±–ª—è—î–º–æ –∫–æ–∂–µ–Ω –µ–ª–µ–º–µ–Ω—Ç —É –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó
    for item in items:
        if item.is_dir():
            # –í–∏–≤–µ–¥–µ–Ω–Ω—è –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó (—Å–∏–Ω—ñ–π –∫–æ–ª—ñ—Ä)
            print(f"{indent}{Fore.BLUE}üìÇ {item.name}")
            # –†–µ–∫—É—Ä—Å–∏–≤–Ω–∏–π –≤–∏–∫–ª–∏–∫ –¥–ª—è –≤–∫–ª–∞–¥–µ–Ω–∏—Ö –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ–π
            print_directory_structure(item, indent + "    ")
        else:
            # –í–∏–≤–µ–¥–µ–Ω–Ω—è —Ñ–∞–π–ª—É (–∑–µ–ª–µ–Ω–∏–π –∫–æ–ª—ñ—Ä)
            print(f"{indent}{Fore.GREEN}üìú {item.name}")

def main():
    # –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞, —á–∏ –±—É–ª–æ –ø–µ—Ä–µ–¥–∞–Ω–æ —à–ª—è—Ö –¥–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó —á–µ—Ä–µ–∑ –∞—Ä–≥—É–º–µ–Ω—Ç–∏ –∫–æ–º–∞–Ω–¥–Ω–æ–≥–æ —Ä—è–¥–∫–∞
    if len(sys.argv) < 2:
        print(f"{Fore.RED}–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–∫–∞–∂—ñ—Ç—å —à–ª—è—Ö –¥–æ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó.")
        return

    # –û—Ç—Ä–∏–º—É—î–º–æ —à–ª—è—Ö –∑ –∞—Ä–≥—É–º–µ–Ω—Ç—ñ–≤
    directory_path = Path(sys.argv[1])

    # –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞, —á–∏ —ñ—Å–Ω—É—î —à–ª—è—Ö
    if not directory_path.exists():
        print(f"{Fore.RED}–®–ª—è—Ö {directory_path} –Ω–µ —ñ—Å–Ω—É—î.")
        return

    # –í–∏–≤–µ–¥–µ–Ω–Ω—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∏ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó
    print(f"{Fore.YELLOW}–°—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–∏—Ä–µ–∫—Ç–æ—Ä—ñ—ó: {directory_path}\n")
    print_directory_structure(directory_path)

# –ó–∞–ø—É—Å–∫ –ø—Ä–æ–≥—Ä–∞–º–∏
if __name__ == "__main__":
    main()
